extends ../../dashboard/views/extends/layout

block head
  title
    | Tasker

block css-includes
  include ../../dashboard/views/includes/css-includes
  link(rel = "stylesheet", href = "/static/css/default.css")
  link(rel = "stylesheet", href = "/static/css/default.date.css")
  link(rel = "stylesheet", href = "/static/css/default.time.css")

block content
  .container
    .row
      .col-md-12
        h1 Tasker
    .row
      .col-md-12
        h2 Current Tasks
        ul.current-tasks
        #add_task_modal.modal.fade(tabindex = "-1", role = "dialog", aria-labelledby = "add_task_modal_label", aria-hidden = "true")
          .modal-dialog
            .modal-content
              .modal-header
                button.close(type = "button", data-dismiss = "modal", aria-hidden = "true")
                  | &times;
                h4#add_task_modal_label.modal-title
                  | Add Task
              .modal-body
                form.form-horizontal.add-task-form(name = "add_task", role = "form")
                  input#task_id_input.form-control.add-task-field.hide(type = "text", name = "id", placeholder = "ID", disabled = "disabled")
                  .form-group.task-name
                    label.col-sm-2.control-label(for = "task_name_input")
                      | Name
                    .col-sm-6
                      input#task_name_input.form-control.add-task-field(type = "text", name = "name", placeholder = "Name")
                  .form-group.task-desc
                    label.col-sm-2.control-label(for = "task_desc_textarea")
                      | Description
                    .col-sm-8
                      textarea#task_desc_textarea.form-control.add-task-field(type = "text", name = "desc", placeholder = "Description", rows = 3)
                  .form-group.task-date
                    label.col-sm-2.control-label(for = "task_date_input")
                      | Due date
                    .col-sm-4
                      input#task_date_input.form-control.add-task-field.datepicker(type = "text", name = "date", placeholder = "Click here")
                    .col-sm-3
                      input#task_time_input.form-control.add-task-field.timepicker(type = "text", name = "time", placeholder = "Click here")
                  .form-group.task-recurring
                    .col-sm-offset-2.col-sm-6
                      .checkbox
                        label
                          input#task_recurring_checkbox.add-task-field(type = "Checkbox", name = "recurring")
                          | Recurring?
                  .form-group.task-recurring-details.hide
                    .col-sm-offset-2.col-sm-8
                      label.checkbox-inline
                        input#task_recurring_details_monday.add-task-field(type = "Checkbox", name = "recurring_days[]", value = "Monday")
                        | Mon
                      label.checkbox-inline
                        input#task_recurring_details_tuesday.add-task-field(type = "Checkbox", name = "recurring_days[]", value = "Tuesday")
                        | Tue
                      label.checkbox-inline
                        input#task_recurring_details_wednesday.add-task-field(type = "Checkbox", name = "recurring_days[]", value = "Wednesday")
                        | Wed
                      label.checkbox-inline
                        input#task_recurring_details_thursday.add-task-field(type = "Checkbox", name = "recurring_days[]", value = "Thursday")
                        | Thu
                      label.checkbox-inline
                        input#task_recurring_details_friday.add-task-field(type = "Checkbox", name = "recurring_days[]", value = "Friday")
                        | Fri
                      label.checkbox-inline
                        input#task_recurring_details_saturday.add-task-field(type = "Checkbox", name = "recurring_days[]", value = "Saturday")
                        | Sat
                      label.checkbox-inline
                        input#task_recurring_details_sunday.add-task-field(type = "Checkbox", name = "recurring_days[]", value = "Sunday")
                        | Sun
              .modal-footer
                button.btn.btn-default.cancel-task-modal-btn(type = "button", data-dismiss = "modal")
                  | Cancel
                button.btn.btn-danger.delete-task-modal-btn.hide(type = "button", data-dismiss = "modal")
                  | Delete
                button.btn.btn-success.save-task-modal-btn.hide(type = "button")
                  | Save
                button.btn.btn-success.add-task-modal-btn(type = "button")
                  | Add

block js-includes
  include ../../dashboard/views/includes/js-includes
  script(src = "/static/js/moment.min.js")
  script(src = "/static/js/picker.js")
  script(src = "/static/js/picker.date.js")
  script(src = "/static/js/picker.time.js")
  script(src = "/static/js/tasker.js")
  script(src = "/static/js/main.js")
